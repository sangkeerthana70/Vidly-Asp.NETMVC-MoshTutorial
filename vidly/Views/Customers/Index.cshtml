@model vidly.ViewModels.IndexViewModel
@{

    ViewBag.Title = "Display Customer Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@*@if (!Model.Any())
{
    <p>We don't have any customers yet.</p>
}
else*@

    <table class="table table-bordered table-hover">

        <thead>
            <tr>
                <th>Customer</th>
                <th>Discount Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {

                @*@<a> href="/customers/Display/@customer.Id">@customer.Name</a>*@
                <tr>
                    <td>@Html.ActionLink(customer.Name, "Display", "Customers", new { id = customer.Id }, null)</td>
                    <td>@customer.MembershipType.DiscountRate%</td>
                </tr>

            }
        </tbody>
        
    </table>




